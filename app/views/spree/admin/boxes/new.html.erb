<%= render :partial => 'spree/admin/shared/shipping_tabs' %>

<% content_for :page_title do %>
    <%= I18n.t("spree.new_box") %>
<% end %>

<% content_for :page_actions do %>
    <li>
      <%= button_link_to I18n.t("spree.back_to_boxes_list"), spree.admin_boxes_path, :icon => 'arrow-left' %>
    </li>
<% end %>

<%= form_for [:admin, @box], :html => {:multipart => true} do |f| %>
    <fieldset class="no-border-top" data-hook="new_box">
      <%= render partial: 'form', locals: {:f => f} %>
      <%= render partial: 'spree/admin/shared/new_resource_links', locals: {collection_url: admin_boxes_url(@box)} %>
    </fieldset>
<% end %>
